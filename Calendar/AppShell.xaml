<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Calendar.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Calendar"
    FlyoutBehavior="Flyout"
    Title="Calendar"
    Shell.ForegroundColor="Purple"
    Shell.BackgroundColor="White">

    <!-- Flyout Header -->
    <Shell.FlyoutHeader>
        <StackLayout BackgroundColor="LightGray" Padding="10">
            <Label Text="Menu" FontAttributes="Bold" FontSize="18" />
        </StackLayout>
    </Shell.FlyoutHeader>

    <!-- TitleView -->
    <Shell.TitleView>
        <StackLayout Orientation="Horizontal" VerticalOptions="Center">
            <Label Text="{Binding CurrentItem.Title, Source={RelativeSource AncestorType={x:Type Shell}}}" 
               VerticalOptions="Center" FontSize="24" />
        </StackLayout>
    </Shell.TitleView>

    <!-- Flyout Items -->
    <FlyoutItem Title="Calendar" >
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Task List">
        <ShellContent ContentTemplate="{DataTemplate local:TaskListPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Administration">
        <ShellContent ContentTemplate="{DataTemplate local:AdministrationPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Settings">
        <ShellContent ContentTemplate="{DataTemplate local:ProfilePage}" />
    </FlyoutItem>

</Shell>
