<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calendar.EventPage"
             Title="EventPage">
    <StackLayout Padding="20">
        <Label x:Name="EventNameLabel" FontSize="24" HorizontalOptions="Center" />
        <Label x:Name="DateLabel" FontSize="18" HorizontalOptions="Center" />
        <Label x:Name="SubjectLabel" FontSize="18" HorizontalOptions="Center" />
        <Label x:Name="EventDetailsLabel" FontSize="18" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>