<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calendar.EventListPage"
             Title="Event List">
    <ContentPage.Background>

        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="white"
                      Offset="0" />
            <GradientStop Color="#8587DE"
                      Offset="1" />
        </LinearGradientBrush>

    </ContentPage.Background>
    <ScrollView>
        <VerticalStackLayout x:Name="MainLayout" Padding="20" Spacing="15">
            <Label Text="Event list" FontSize="30" FontAttributes="Bold" FontFamily="Inter"
TextColor="#4F5171"/>
            <!-- Static Content -->
            <HorizontalStackLayout Spacing="10">

                <Label x:Name="SortByLabel" FontSize="24" HorizontalOptions="Center" Text="Sort by:" FontFamily="Inter"
TextColor="#4F5171" Margin="0,5,0,0" />
                <Border>
                    
                    <Border.Background>
                        
                        <LinearGradientBrush EndPoint="1,0">
                            <GradientStop Color="#5E52A0"
                                                Offset="0" />
                            <GradientStop Color="#8E80DE"
                                            Offset="1" />
                        </LinearGradientBrush>
                        
                    </Border.Background>
                    
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15"/>
                    </Border.StrokeShape>
                    
                    <Button x:Name="DateSort" 
                        Text="Date" 
                        FontFamily="Inter"
                        FontAttributes="Bold"
                        Clicked="OnDateSortClicked"
                        BackgroundColor="Transparent"/>
                    
                </Border>
                <Border>

                    <Border.Background>

                        <LinearGradientBrush EndPoint="1,0">
                            <GradientStop Color="#5E52A0"
                                Offset="0" />
                            <GradientStop Color="#8E80DE"
                            Offset="1" />
                        </LinearGradientBrush>

                    </Border.Background>

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15"/>
                    </Border.StrokeShape>

                    <Button x:Name="EventSort"
                            Text="Subjects"
                            FontFamily="Inter"
                            FontAttributes="Bold"
                            Clicked="OnEventSortClicked"
                            BackgroundColor="Transparent"/>
                </Border>
                    
            </HorizontalStackLayout>
            <Button x:Name="CreateButton"
                    Text="Create event"
                    FontFamily="Inter"
                    FontAttributes="Bold"
                    BackgroundColor="#5E52A0"
                    TextColor="White"
                    HorizontalOptions="Center"
                    Clicked="CreateButton_Clicked"/>
            <VerticalStackLayout x:Name="DynamicContent" Spacing="15" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
