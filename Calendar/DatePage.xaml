<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calendar.DatePage"
             Title="DatePage">
    
    <ContentPage.Background>

        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="white"
                      Offset="0" />
            <GradientStop Color="#8587DE"
                      Offset="1" />
        </LinearGradientBrush>

    </ContentPage.Background>

    <StackLayout Padding="20">
        <Label x:Name="DateLabel" FontSize="24" FontAttributes="Bold" FontFamily="Inter" TextColor="#4F5171" HorizontalOptions="Center" />
        <StackLayout x:Name="EventsStackLayout" Padding="10" />
        <Button x:Name="CreateButton"
        Text="Create event"
        FontFamily="Inter"
        FontAttributes="Bold"
        BackgroundColor="#5E52A0"
        TextColor="White"
        HorizontalOptions="Center"
        Clicked="CreateButton_Clicked"/>
    </StackLayout>
</ContentPage>
